{% extends "base.html.twig" %}

{% block title %}Welcome!{% endblock %}

{% block body %}
    <div class="col-lg-8 mx-auto p-3 py-md-5">
        <header class="d-flex align-items-center pb-3 mb-5 border-bottom">
            <a href="{{ url("web.home") }}" class="d-flex align-items-center text-dark text-decoration-none">
                <img class="me-2" src="/img/bowling.png" height="30">
                <span class="fs-4">Bowling management</span>
            </a>
        </header>

        <main>
            <h1>Create a new Bowling alley</h1>

            <form action="{{ url('web.create-bowling-alley-post') }}" method="post">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" min="1" max="200" class="form-control" id="name" name="name">
                </div>
                <div class="mb-3">
                    <label for="lanes" class="form-label">Number of lanes</label>
                    <input type="number" min="1" max="10" class="form-control" id="lanes" value="1" name="lanes">
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
            </form>

        </main>
        {% include 'component/footer.html.twig' %}
    </div>
{% endblock %}
