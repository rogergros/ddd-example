{% extends "base.html.twig" %}

{% block title %}Welcome!{% endblock %}

{% block body %}
    <div class="col-lg-8 mx-auto p-3 py-md-5">
        <header class="d-flex align-items-center pb-3 mb-5 border-bottom">
            <a href="{{ url("web.home") }}" class="d-flex align-items-center text-dark text-decoration-none">
                <img class="me-2" src="/img/bowling.png" height="30">
                <span class="fs-4">Bowling management</span>
            </a>
        </header>

        <main>
            <h1>Bowling Alleys</h1>
            <p class="fs-5 col-md-8">Quickly and easily manage your Bowling Alleys, create new games and keep track of their scores.</p>

            <div class="mb-3 list-group">
                <a href="#" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
                    <img src="/img/alley.png" height="32">
                    <div class="d-flex gap-2 w-100 justify-content-between">
                        <div>
                            <h6 class="mb-0">Bowling Alley 1</h6>
                            <p class="mb-0 opacity-75">5 lanes</p>
                        </div>
                        <small class="opacity-50 text-nowrap">3 active games</small>
                    </div>
                </a>
                <a href="#" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
                    <img src="/img/alley.png" height="32">
                    <div class="d-flex gap-2 w-100 justify-content-between">
                        <div>
                            <h6 class="mb-0">Bowling Alley 2</h6>
                            <p class="mb-0 opacity-75">2 lanes</p>
                        </div>
                        <small class="opacity-50 text-nowrap">1 active games</small>
                    </div>
                </a>
                <a href="#" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
                    <img src="/img/alley.png" height="32">
                    <div class="d-flex gap-2 w-100 justify-content-between">
                        <div>
                            <h6 class="mb-0">Bowling Alley 3</h6>
                            <p class="mb-0 opacity-75">3 lanes</p>
                        </div>
                        <small class="opacity-50 text-nowrap">no active games</small>
                    </div>
                </a>
            </div>

            <div class="mb-5">
                <a href="/docs/5.1/examples/" class="btn btn-primary btn-m px-4">
                    <i class="bi bi-plus-circle"></i>
                    Bowling alley
                </a>
            </div>

            <hr class="col-3 col-md-2 mb-5">

            <div class="row g-5">
                <div class="col-md-6">
                    <h2>Current games</h2>

                    <div class="list-group">
                        <a href="#" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
                            <img src="/img/pins.png" height="32">
                            <div class="d-flex gap-2 w-100 justify-content-between">
                                <div>
                                    <h6 class="mb-0">Bowling Alley 1 - Lane 2</h6>
                                    <p class="mb-0 opacity-75">2 players / Frame 2</p>
                                </div>
                                <small class="opacity-50 text-nowrap">
                                    <div class="spinner-border spinner-border-sm" role="status">
                                        <span class="visually-hidden">Ongoing</span>
                                    </div>
                                    30 min
                                </small>
                            </div>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
                            <img src="/img/pins.png" height="32">
                            <div class="d-flex gap-2 w-100 justify-content-between">
                                <div>
                                    <h6 class="mb-0">Bowling Alley 2 - Lane 3</h6>
                                    <p class="mb-0 opacity-75">4 players / Frame 9</p>
                                </div>
                                <small class="opacity-50 text-nowrap">
                                    <div class="spinner-border spinner-border-sm" role="status">
                                        <span class="visually-hidden">Ongoing</span>
                                    </div>
                                    12 min
                                </small>
                            </div>
                        </a>
                    </div>
                </div>

                <div class="col-md-6">
                    <h2>Last Finished Games</h2>
                    <div class="list-group">
                        <a href="#" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
                            <img src="/img/pins.png" height="32">
                            <div class="d-flex gap-2 w-100 justify-content-between">
                                <div>
                                    <h6 class="mb-0">Bowling Alley 1 - Lane 2</h6>
                                    <p class="mb-0 opacity-75">2 players / Frame 2</p>
                                </div>
                                <small class="opacity-50 text-nowrap">
                                    <i class="bi bi-check-lg"></i>
                                    30 min
                                </small>
                            </div>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
                            <img src="/img/pins.png" height="32">
                            <div class="d-flex gap-2 w-100 justify-content-between">
                                <div>
                                    <h6 class="mb-0">Bowling Alley 2 - Lane 3</h6>
                                    <p class="mb-0 opacity-75">4 players / Frame 9</p>
                                </div>
                                <small class="opacity-50 text-nowrap">
                                    <i class="bi bi-check-lg"></i>
                                    12 min
                                </small>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </main>
        <footer class="pt-5 my-5 text-muted border-top">
            <ul class="list-unstyled">
                <li>Created by Roger Gros</li>
                <li><a target="_blank" href="https://iconos8.es/icon/Y3ieDwRhlOhf/bowling">Bowling</a> icon from <a target="_blank" href="https://iconos8.es">Icons8</a></li>
            </ul>
        </footer>
    </div>
{% endblock %}
