{
    "name": "rogergros/ddd-example",
    "description": "DDD Example project",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "DDDExample\\": "src/",
            "DDDExample\\App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DDDExample\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Roger Gros",
            "homepage": "https://gros.cat"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "lambdish/phunctional": "^2.1",
        "squizlabs/php_codesniffer": "^3.6",
        "symfony/console": "6.0.*",
        "symfony/dotenv": "6.0.*",
        "symfony/flex": "^2",
        "symfony/framework-bundle": "6.0.*",
        "symfony/messenger": "6.0.*",
        "symfony/runtime": "6.0.*",
        "symfony/serializer": "6.0.*",
        "symfony/twig-bundle": "6.0.*",
        "symfony/uid": "6.0.*",
        "symfony/yaml": "6.0.*"
    },
    "require-dev": {
        "brianium/paratest": "^6.4",
        "fakerphp/faker": "^1.17",
        "phpstan/phpstan": "^1.4",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-latest",
        "vimeo/psalm": "^4.18"
    },
    "config": {
        "bin-dir": "bin",
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "style-fix": "phpcbf -p",
        "check": [
            "psalm --threads=8",
            "phpstan analyse --memory-limit=-1 --ansi",
            "paratest --runner=WrapperRunner --colors",
            "phpcs -p --colors --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "6.0.*"
        }
    }
}
